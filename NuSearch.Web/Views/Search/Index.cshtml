@model SearchViewModel

<div class="container-fluid bound-container page-header">
	@await Html.PartialAsync(Model.Total > 0 ? "Results" : "NoResults", Model)
</div>

@section HeaderSub {
	<div class="row">
		<div class="col-lg-12" id="search-criteria">
			@using (Html.BeginForm(FormMethod.Get, new {id = "search-criteria"}))
			{
				@await Html.PartialAsync("RememberQuery", Model.Form)
				@await Html.PartialAsync("RememberAuthor", Model.Form)
				@await Html.PartialAsync("SearchCriteria", Model)
			}
		</div>
	</div>
}
